<Window x:Class="Lab_rab_2_CherevkoG.S_BPI_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_rab_2_CherevkoG.S_BPI_23_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="480" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <StackPanel>
        <Label Content="Формула для расчета:" HorizontalAlignment="Center"/>
        <Image Source="Формула15.png" Margin="1" MaxHeight="40"/>
        <Label Content="Введи следующие параметры для вычисления:" HorizontalAlignment="Center"/>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="N:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ComboBox Grid.Row="0" Grid.Column="1" Name="comboN" Margin="5" Height="25" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBox Grid.Row="0" Grid.Column="2" Name="textN" Margin="5" Width="80" Height="25" Text="5" TextChanged="TextBox_TextChanged"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="K:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Name="comboK" Margin="5" Height="25" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBox Grid.Row="1" Grid.Column="2" Name="textK" Margin="5" Width="80" Height="25" Text="3" TextChanged="TextBox_TextChanged"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="P:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Name="comboP" Margin="5" Height="25" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBox Grid.Row="2" Grid.Column="2" Name="textP" Margin="5" Width="80" Height="25" Text="1.0" TextChanged="TextBox_TextChanged"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="X:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ComboBox Grid.Row="3" Grid.Column="1" Name="comboX" Margin="5" Height="25" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBox Grid.Row="3" Grid.Column="2" Name="textX" Margin="5" Width="80" Height="25" Text="1.0" TextChanged="TextBox_TextChanged"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="F:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ComboBox Grid.Row="4" Grid.Column="1" Name="comboF" Margin="5" Height="25" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBox Grid.Row="4" Grid.Column="2" Name="textF" Margin="5" Width="80" Height="25" Text="1.0" TextChanged="TextBox_TextChanged"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Y:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ComboBox Grid.Row="5" Grid.Column="1" Name="comboY" Margin="5" Height="25" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBox Grid.Row="5" Grid.Column="2" Name="textY" Margin="5" Width="80" Height="25" Text="1.0" TextChanged="TextBox_TextChanged"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Name="buttonCalc" Content="Рассчитать Z" Height="30" Margin="5" Click="ButtonCalc_Click" MaxWidth="150" HorizontalAlignment="Left" 
                    Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
            <Label Grid.Row="0" Grid.Column="1" Content="Ответ:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Name="Result" Text="Ответ" Height="40" IsReadOnly="True"/>
        </Grid>
    </StackPanel>
</Window>
